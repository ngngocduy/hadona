<!DOCTYPE html>
<html lang="@PixelCMS.Helpers.CultureHelper.GetCurrentNeutralCulture()">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <meta http-equiv="content-language" content="@PixelCMS.Helpers.CultureHelper.GetCurrentNeutralCulture()" />

    <title>@ViewBag.Title | @Html.Action("LoadOption", "Common", new { code = "common-sitename" })</title>

    @if (Html.Action("LoadOption", "Common", new { code = "common-favicon" }) != null)
    {
        <link rel="shortcut icon" href="@Html.Action("LoadOption", "Common", new { code = "common-favicon" })" type="image/png" />
    }

    @RenderSection("metas", required: false)

    <!--***********************************************************************************-->
    <!-- Thế kỷ Mới - http://www.thekymoi.com                                              -->
