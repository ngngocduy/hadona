<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="content-language" content="@PixelCMS.Helpers.CultureHelper.GetCurrentNeutralCulture()" />
    <title>@ViewBag.Title | @Html.Action("LoadOption", "Common", new { code = "common-sitename" })</title>
     @RenderSection("metas", required: false)
    <link href="@Html.Action("LoadOption", "Common", new { code = "common-favicon" })" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @*<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" />*@

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Theme/mobile/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Theme/mobile/css/form.css" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/jqueryui/css")
    @*<script src="~/Theme/mobile/js/jquery-1.9.1.min.js"></script>*@
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    <!-- BX Slider -->
    <script src="~/Theme/mobile/libs/bxslider/jquery.bxslider.min.js"></script>
    <link href="~/Theme/mobile/libs/bxslider/jquery.bxslider.css" rel="stylesheet" type="text/css">

    <!-- Fancy box -->
    <link href="~/Theme/mobile/libs/fancybox/jquery.fancybox.css" rel="stylesheet" type="text/css">
    <script src="~/Theme/mobile/libs/fancybox/jquery.fancybox.js"></script>

    <script src="~/Theme/mobile/js/script.js"></script>
    <script src="/LCSK/assets/js/jquery.signalR-2.1.1.min.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
      <script src="/Scripts/custom.js"></script>
    @*@Styles.Render("~/Content/Mobile/css")
    @Scripts.Render("~/bundles/MobileJS")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @Html.Action("HeaderMobile", "Common")

    @Html.Action("MenuMobile", "Common", new { positioncode = "menu-header" })

    @RenderBody()

    @Html.Action("FooterMobile", "Common")

    <div class="alert alert-success" id="alert-cart" style="background-color: #d9edf7; display: none; position: fixed; top: 0px; left: 0px; width: 100%; text-align: center; z-index: 8999">
    </div>
    <div style="position: fixed; top: 50%; left: 50%; display: none;"
        id="loading">
        <img src="~/Content/adminpanel/loading-image.gif" />
    </div>
    <script>
        //jquery-1.8.2.js level up
        $("#loading").ajaxStart(function () {
            $(this).show();
        });
        $("#loading").ajaxComplete(function () {
            $(this).hide();
        });
    </script>
</body>
</html>
