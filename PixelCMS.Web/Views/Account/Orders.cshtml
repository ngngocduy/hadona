@{
    ViewBag.Title = "Các đơn đặt hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<PixelCMS.Core.Models.Order>
@section css
{
    @* <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">*@
    <link href="/Theme/custom/css/default.css" rel="stylesheet" type="text/css">
    <link href="/Theme/custom/css/account.css" rel="stylesheet" type="text/css">
    @*<link href="/Theme/custom/css/form.css" rel="stylesheet" type="text/css">*@
}

<div class="container">
    <div class="product-detail">
        <div class="wrap-page cf">
            @Html.Partial("_MenuLeft")<!-- End aside-infomation -->

            <div class="main-account float-right">
                <div class="tbl list-carts">
                    <div class="tbl-head">
                        <ul class="cf">
                            <li class="name">@Resources.admin_cart_customer_name</li>
                            <li class="date">@Resources.admin_cart_datecreateorder</li>
                            <li class="total">@Resources.cart_totalmoney</li>
                            <li class="status">@Resources.admin_cart_status</li>
                            <li class="readmore fcenter">Xem chi tiết</li>
                        </ul>
                    </div>
                    <!-- End tbl-head -->
                    <div class="tbl-body">

                        @foreach (var item in Model)
                        {
                            <ul class="cf">
                                <li class="name">@Html.DisplayFor(modelItem => item.Name)</li>
                                <li class="date">@Html.DisplayFor(modelItem => item.Date_Add)</li>
                                <li class="total">@string.Format("{0:c}", item.Total)</li>
                                <li class="status">@Html.DisplayFor(modelItem => item.Order_Status.Order_Item_Language.FirstOrDefault().Name)</li>
                                <li class="readmore fcenter"><a href="@Url.Action("OrderDetails", "Account", new { id = item.Id })" ><i class="fa fa-arrow-circle-right"></i></a></li>
                            </ul>
                        }
                    </div>
                    <!-- End tbl-body -->
                </div>
                <!-- End tbl -->
            </div>
            <!-- End main-account -->
        </div>
    </div>
</div>
