@model PixelCMS.Core.Models.Roles_Access
@{
    ViewBag.Title = "Sửa quyền nhóm thành viên";
    ViewBag.PTitle = "Sửa quyền nhóm thành viên";
    ViewBag.PDescription = "Sửa quyền nhóm thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="main">
    <div class="container">
        <div class="sixteen columns">
            <h1><i class="fa fa-users"></i>Sửa quyền nhóm thành viên</h1>


            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Role_Id)

                <aside id="control">
                    <div>
                        <input type="submit" value="Sửa" class="btn btn-blue" />
                        <a href="@Url.Action("UserRoles", "User")" class="btn"><i class="fa fa-chevron-left"></i>Quay lại</a>
                    </div>
                </aside>
    
                <table class="grid form-input">
                    <tr>
                        <th colspan="2">Thông tin cơ bản</th>
                    </tr>

                    <tr>
                        <td class="label">Truy cập trang Admin Panel</td>
                        <td>@Html.EditorFor(model => model.Admin)</td>
                    </tr>
                    @if (User.IsInRole("tkmadmin"))
                    {
                        <tr>
                            <td class="label">Truy cập trang TKMAdmin</td>
                            <td>@Html.EditorFor(model => model.PixelAdmin)</td>
                        </tr> 
                    }
                    <tr>
                        <td class="label">Tài khoản</td>
                        <td>@Html.EditorFor(model => model.User)</td>
                    </tr>
                    <tr>
                        <td class="label">Truy cập trang Tùy chỉnh</td>
                        <td>@Html.EditorFor(model => model.Option)</td>
                    </tr>
                    <tr>
                        <td class="label">Truy cập quản lý Menu</td>
                        <td>@Html.EditorFor(model => model.Menu)</td>
                    </tr>

                    <tr>
                        <td class="label">Truy cập quản lý Email</td>
                        <td>@Html.EditorFor(model => model.Email)</td>
                    </tr>


                     @if (User.IsInRole("tkmadmin") || User.IsInRole("admin"))
                     {
                         <tr>
                             <td class="label">Truy cập phần bán hàng</td>
                             <td>@Html.EditorFor(model => model.Order_View)</td>
                         </tr>
                     }
                    <tr>
                        <td class="label">Header HTML</td>
                        <td>@Html.EditorFor(model => model.Header_Html)</td>
                    </tr>
                    @if (User.IsInRole("tkmadmin"))
                    {
                        <tr>
                            <td>TKM</td>
                        </tr>
                        
                        <tr>
                            <td class="label">Thuộc tính sản phẩm</td>
                            <td>@Html.EditorFor(model => model.Attribute)
                                 @if (User.IsInRole("tkmadmin"))
                                 {
                                    <p>Kích hoạt trong edit sp :CD giảm giá,biến thể, tt kỹ thuật. Đơn hàng:phí vận chuyển,tình trạng onepay,Email marketing(của role admin)</p>
                                 }
                            </td>
                        </tr> 
                         <tr>
                            <td class="label">Kho</td>
                            <td>@Html.EditorFor(model => model.Inventory)</td>
                        </tr> 
                         <tr>
                            <td class="label">Phí vận chuyển</td>
                            <td>@Html.EditorFor(model => model.Shipping)</td>
                        </tr> 
                         <tr>
                            <td class="label">QL Files</td>
                            <td>@Html.EditorFor(model => model.Files)</td>
                        </tr> 
                         <tr>
                            <td class="label">History</td>
                            <td>@Html.EditorFor(model => model.History)</td>
                        </tr> 
                       
                    }
                </table>  
    
            }



        </div>
    </div>
</section>
