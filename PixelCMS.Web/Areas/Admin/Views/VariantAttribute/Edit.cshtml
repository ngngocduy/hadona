@using PixelCMS.Core.Models
@model PixelCMS.Core.Models.VariantAttribute

@{
    ViewBag.Title = "edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    pixelcmsEntities db = new pixelcmsEntities();
}

<section id="main">

    <div class="container">
        <div class="sixteen columns">
            <h1>Chỉnh sửa biến thể</h1>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PostId)
                @Html.ValidationSummary(true)
                <aside id="control">
                    <div>
                        <input type="submit" value="Sửa" class="btn btn-blue" />
                       <a href="@Url.Action("Index", new { postid = Model.PostId })" class="btn"><i class="fa fa-chevron-left"></i>Quay lại</a>
                    </div>
                </aside>
    
               <table class="grid form-input">
                    <tr>
                        <th colspan="2">Thông tin cơ bản</th>
                    </tr>
                   @* <tr>
                        <td class="label">Tên thuộc tính</td>
                        <td>
                            @Html.TextBoxFor(model => model.Name, new { required = true })
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>*@
                    <tr>
                        <td class="label">Tên nhóm thuộc tính</td>
                        <td>@Html.DropDownList("VariantGroup_Id")
                            @Html.ValidationMessageFor(model => model.VariantGroup_Id)
                        </td>
                    </tr>
                    <tr>
                        <td class="label">Loại input</td>
                        <td>
                            @Html.DropDownList("Type")
                        </td>
                    </tr>
                    <tr>
                        <td class="label">kích hoạt</td>
                        <td>
                            @Html.CheckBoxFor(model => model.Active)
                        </td>
                    </tr>
                </table>

            }

        </div>
    </div>

</section>
<script>
