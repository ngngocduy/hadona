<script type="text/javascript">
    $(function () {
        $('#containerB').highcharts({
            title: {
                text: '',
                x: -20 //center
            },
            subtitle: {
                text: 'thekymoi.com',
                x: -20
            },
            xAxis: {
                categories: ['Tháng 1(Jan)', 'Tháng 2(Feb)', 'Tháng 3(Mar)', 'Tháng 4(Apr)', 'Tháng 5(May)', 'Tháng 6(Jun)',
                    'Tháng 7(Jul)', 'Tháng 8(Aug)', 'Tháng 9(Sep)', 'Tháng 10(Oct)', 'Tháng 11(Nov)', 'Tháng 12(Dec)']
            },
            yAxis: {
                title: {
                    // text: 'Temperature (°C)'
                    text: 'Lượt truy cập (Tháng)'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: 'Lượt'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle',
                borderWidth: 0
            },
            series: [
                {
                    name: 'Hàng tháng',
                    data: [
                        @for (int i = 1; i < 13; i++)
                        {
                            if (i <= DateTime.Now.Month && i != 1)
                            {
                           @Html.Raw(".0,")
                            }
                            foreach (var item in listthang)
                            {
                                if (i == item.thang)
                                {
                                 @(item.soluottruycap)
                                }
                            }
                        }
                    ]
                }
            ]
        });
    });
</script>
