@model PixelCMS.Core.Models.Comment

@{
    ViewBag.Title = "Tạo tag ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section id="main">

    <div class="container">
        <div class="sixteen columns">
            <h1>Tạo tag</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <aside id="control">
                    <div>
                        <input type="submit" value="Tạo" class="btn btn-blue" />
                        <a href="@Url.Action("Index")" class="btn"><i class="fa fa-chevron-left"></i>Quay lại</a>
                    </div>
                </aside>
    
                <table class="grid form-input">
                    <tr>
                        <th colspan="2">Thông tin cơ bản</th>
                    </tr>
                    <tr>
                        <td class="label">Tên tag</td>
                        <td>@Html.TextBoxFor(model => model.Name, new { minlength = "5", maxlength = "142", required = true })</td>
                    </tr>
                </table>

            }

        </div>
    </div>

</section>
